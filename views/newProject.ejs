<%- include('partials/header.ejs') %>


<form action="/newProject" method="POST" class="mt-5">
    <div class="row m-2 p-2">
        <div class="form-group product-form col-sm-12 col-md-2 mt-3">
            <label for="name">Project Name:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter Name" name="projectName" autocomplete="on" required>
        </div>
        <div class="form-group product-form col-sm-12 col-md-6 mt-3">
            <label for="des">Project Description:</label>
            <input type="text" class="form-control" id="des" placeholder="Enter Decription" name="projectDescription" autocomplete="on" required>
        </div>
        <div class="form-group product-form col-sm-12 col-md-4 mt-3">
            <label for="projectCategory">Project Category:</label>
            <select type="text" class="form-control form-control-lg" id="projectCategory" name="projectCategory" required>
                <option value="Passion/Career Orientated">Passion/Career Orientated</option>
                <option value="Arts">Arts</option>
                <option value="Fitness">Fitness</option>
                <option value="Science">Science</option>
                <option value="Integrated Humanities">Integrated Humanities</option>
                <option value="Character">Character</option>
                <option value="Competence">Competence</option>
                <option value="Business">Business</option>
                <option value="Design & tech">Design & Tech</option>
                <option value="Leadership">Leadership</option>
                <option value="Personal">Personal</option>
                <option value="Exploration">Exploration</option>
            </select>
        </div>
    </div>
    <div class="row m-2 p-2">
        <div class="form-group product-form col-sm-12 col-md-3 mt-3">
            <label for="tags">Tags:</label>
            <input type="text" class="form-control" id="tags" placeholder="Enter Tags" name="projectTags" autocomplete="on" required>
            <div id="emailHelp" class="form-text">(Only your best project needs to have this tag extra: "featured", rest should have "project")</div>
        </div>
        <div class="form-group product-form col-sm-12 col-md-9 mt-3">
            <label for="imgPath">Enter Image Paths, seperated by comma and a single space:</label>
            <input type="text" class="form-control" id="imgPath" placeholder="Enter Path" name="projectImgPath" required>
            <div id="emailHelp" class="form-text">Upload images on drive, make the image public and copy share link. Then go to this <a href="https://www.labnol.org/embed/google/drive/">Website</a> and paste your link and click convert. Then paste the converted link over here.</div>
        </div>
    </div>
    <div class="form-group product-form col-sm-12 col-md-3 d-flex justify-content-center mb-3">
        <button class="btn submit-btn">Submit</button>
    </div>
</form>


<%- include('partials/footer.ejs') %>